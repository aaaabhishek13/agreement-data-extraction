# Production Environment Configuration
# Copy this file to .env in your production environment

# API Keys (REPLACE WITH YOUR ACTUAL KEYS)
OPENAI_API_KEY=your_production_openai_api_key_here
GEMINI_API_KEY=your_production_gemini_api_key_here

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your_super_secret_production_key_here_make_it_long_and_random
FLASK_HOST=0.0.0.0
FLASK_PORT=5001

# Upload Settings
MAX_CONTENT_LENGTH=33554432  # 32MB for production
UPLOAD_FOLDER=/opt/lease-extraction/uploads

# LLM Settings
DEFAULT_LLM_PROVIDER=gemini
OPENAI_MODEL=gpt-4
GEMINI_MODEL=gemini-2.5-pro

# Logging Settings
LOG_TO_FILE=true
LOG_FULL_CONTENT=false  # Set to false in production for performance
LOG_FILE_PATH=/opt/lease-extraction/logs/extraction.log

# Security Settings (adjust for direct access)
SESSION_COOKIE_SECURE=false  # Set to true only if using HTTPS
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Performance Settings
WORKERS=4
WORKER_CONNECTIONS=1000
TIMEOUT=300
